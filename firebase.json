{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/**",
        "dynamicLinks": true
      },
      {
        "source": "!/**",
        "destination": "/index.html"
      },
      {
        "source": "/b/**",
        "dynamicLinks": true
      },
      {
        "source": "!/b/**",
        "destination": "/index.html"
      },
      {
        "source": "/link/**",
        "dynamicLinks": true
      },
      {
        "source": "!/link/**",
        "destination": "/index.html"
      }
      
    ]
  }
}
