{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
	  {
      "source": "/link/**",
      "dynamicLinks": true
    },
		{
			"source": "!/link/**",
			"destination": "/index.html"
		},
	  {
      "source": "/b/**",
      "dynamicLinks": true
    },
	  {
      "source": "!/b/**",
      "dynamicLinks": true
    }
    ]
  }
}
