{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/promos/**",
        "dynamicLinks": true
      },
      {
        "source": "/links/share/**",
        "dynamicLinks": true
      }
    ]
  }
}
