This is the copy of firebase.json under public folder.

{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
	  {
      "source": "/link/**",
      "dynamicLinks": true
    },
		{
			"source": "!/link/**",
			"destination": "/index.html"
		},
	  {
      "source": "/b/**",
      "dynamicLinks": true
    },
	  {
      "source": "!/b/**",
      "dynamicLinks": true
    },
		{
			"source": "**",
			"destination": "/index.html"
		}		
    ]
  }
}
